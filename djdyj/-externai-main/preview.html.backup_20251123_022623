                        <div class="flex items-center gap-2 flex-wrap">
                            <span class="text-xs font-semibold text-slate-400 uppercase tracking-wider">Quick
                                start:</span>
                            <button onclick="fillPrompt('Build a modern e-commerce website with cart')"
                                class="text-sm bg-white hover:bg-primary-50 text-slate-600 hover:text-primary-600 px-3 py-1.5 rounded-full transition-all border border-slate-200 hover:border-primary-300">E-commerce
                                site</button>
                            document.querySelector(this.getAttribute('href'))?.scrollIntoView({ behavior: 'smooth' });
                            });
                            });

                            // Handle prompt
                            function handlePromptSubmit(promptText) {
                            if (!promptText?.trim()) return alert('Please enter what you want to build!');
                            localStorage.setItem('userPrompt', promptText.trim());
                            window.location.href = '/preview-chat.html';
                            }

                            // Input handlers
                            const promptInput = document.getElementById('promptInput');
                            const submitButton = document.getElementById('submitPrompt');

                            promptInput?.addEventListener('keypress', (e) => {
                            if (e.key === 'Enter') handlePromptSubmit(promptInput.value);
                            });

                            submitButton?.addEventListener('click', () => handlePromptSubmit(promptInput?.value));

                            // Fill prompt function
                            function fillPrompt(text) {
                            if (promptInput) {
                            promptInput.value = text;
                            promptInput.focus();
                            }
                            }

                            // All CTAs
                            document.querySelectorAll('button').forEach(button => {
                            const text = button.textContent.toLowerCase();
                            if (text.includes('get started') || text.includes('start building')) {
                            button.addEventListener('click', () => {
                            const prompt = promptInput?.value;
                            if (prompt?.trim()) handlePromptSubmit(prompt);
                            else window.location.href = '/preview-chat.html';
                            });
                            }
                            });

                            // Keyboard shortcut Ctrl/Cmd + K
                            document.addEventListener('keydown', (e) => {
                            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                            e.preventDefault();
                            promptInput?.focus();
                            promptInput?.select();
                            }
                            });

                            // Scroll animations
                            const observer = new IntersectionObserver((entries) => {
                            entries.forEach(entry => {
                            if (entry.isIntersecting) {
                            entry.target.style.opacity = '1';
                            entry.target.style.transform = 'translateY(0)';
                            }
                            });
                            }, { threshold: 0.1 });

                            document.querySelectorAll('.card-hover').forEach(card => {
                            card.style.opacity = '0';
                            card.style.transform = 'translateY(30px)';
                            card.style.transition = 'opacity 0.6s ease-out, transform 0.6s ease-out';
                            observer.observe(card);
                            });
                            </script>
</body>

